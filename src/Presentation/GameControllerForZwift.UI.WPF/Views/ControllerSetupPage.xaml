                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" SelectedIndex="0" Margin="8,4,4,4"/>
                            <Button Grid.Column="1" Content="Refresh List" Margin="4,4,8,4"/>
                        </Grid>

                        <Border CornerRadius="6" Grid.RowSpan="2" Background="Gray" Opacity="0.1"/>
                    </Grid>-->
                    

                    <!--<GroupBox Header="Controller">
                        <Grid MinWidth="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            --><!--<ComboBox MinWidth="200" HorizontalAlignment="Left" ItemsSource="{Binding FontFamilies}" SelectedIndex="0" />--><!--
                            <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" SelectedIndex="0"/>
                            <Button Grid.Column="1" Content="Refresh List"/>
                        </Grid>
                    </GroupBox>-->
                    
                    <controls:Card MinWidth="300" Title="Reset" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="To Default Values"/>
                            <Button Content="Clear Values"/>
                        </StackPanel>
                    </controls:Card>
                    <!--<GroupBox Header="Profile">
                        <Grid MinWidth="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            --><!--<ComboBox MinWidth="200" HorizontalAlignment="Left" ItemsSource="{Binding FontFamilies}" SelectedIndex="0" />--><!--
                            <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" SelectedIndex="0"/>
                            <Button Grid.Column="1" Content="Load"/>
                            <Button Grid.Column="2" Content="Save"/>
                        </Grid>
                    </GroupBox>-->
                    <controls:Card MinWidth="300" Title="Profile" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <Grid MinWidth="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>


                            <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" SelectedIndex="0"/>
                            <Button Grid.Column="1" Content="Load"/>
                            <Button Grid.Column="2" Content="Save"/>
                        </Grid> 
                    </controls:Card>
                </WrapPanel>

                <GroupBox Header="Controller Mapping" Grid.Row="1">

                    <WrapPanel>
                        <Grid MinWidth="200">
                            <Grid.RowDefinitions>
                                <RowDefinition Height=".5*"/>
                                <RowDefinition Height=".5*"/>
                            </Grid.RowDefinitions>

                            <GroupBox Header="Buttons" Grid.Row="0" MinHeight="200" BorderThickness="1">

                            </GroupBox>

                            <GroupBox Header="D-Pad" Grid.Row="1" MinHeight="200">

                            </GroupBox>
                        </Grid>

                        <GroupBox Header="Left Stick" MinWidth="200" MinHeight="400">
                        </GroupBox>

                        <GroupBox Header="Right Stick" MinWidth="200" MinHeight="400">
                        </GroupBox>

                        <GroupBox Header="Triggers" MinWidth="200" MinHeight="400">
                        </GroupBox>
                    </WrapPanel>
                </GroupBox>

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
