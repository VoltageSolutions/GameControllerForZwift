<Page x:Class="GameControllerForZwift.UI.WPF.Views.ControllerSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameControllerForZwift.UI.WPF.Views"
      xmlns:helpers="clr-namespace:GameControllerForZwift.UI.WPF.Helpers"
      xmlns:controls="clr-namespace:GameControllerForZwift.UI.WPF.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControllerSetupPage">
    <Page.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <TextBlock
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="{Binding ViewModel.Title}"
                    d:Text="Controller Setup"
                    AutomationProperties.HeadingLevel="Level1"/>
                <TextBlock
                x:Name="DescriptionTextBlock"
                Text="{Binding ViewModel.Description}" 
                    d:Text="Select a game controller and configure"
                AutomationProperties.HeadingLevel="Level2"
                Visibility="{Binding ViewModel.Description, Converter={StaticResource NullToVisibilityConverter}}"
                />
            </StackPanel>


            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="0" Orientation="Horizontal">
                    <controls:Card MinWidth="300" Title="Controller" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" SelectedIndex="0" Margin="0,0,6,0" Height="32"/>
                            <Button Grid.Column="1" Content="Refresh List" Margin="6,0,0,0" Height="32"/>
                        </Grid>
                    </controls:Card>

                    <controls:Card MinWidth="300" Title="Reset" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="To Default Values" Margin="0,0,6,0" Height="32"/>
                            <Button Content="Clear Values" Margin="6,0,0,0" Height="32"/>
                        </StackPanel>
                    </controls:Card>
                    
                    <controls:Card MinWidth="300" Title="Profile" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <Grid MinWidth="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>


                            <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" SelectedIndex="0" Height="32" Margin="0,0,6,0"/>
                            <Button Grid.Column="1" Content="Load" Height="32" Margin="6,0,6,0"/>
                            <Button Grid.Column="2" Content="Save" Height="32" Margin="6,0,6,0"/>
                        </Grid> 
                    </controls:Card>
                </WrapPanel>



                <WrapPanel Grid.Row="1">
                    <Grid MinWidth="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height=".5*"/>
                        </Grid.RowDefinitions>

                        <controls:Card Grid.Row="0" MinHeight="200" Title="Buttons" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">

                            <StackPanel Orientation="Vertical">
                                <controls:InputMapper 
                                    InputName="A"
                                    DataContext="{Binding ViewModel.SelectorViewModel}"
                                    />

                                <controls:InputMapper 
                                    InputName="B"
                                    
                                    />

                            </StackPanel>
                        </controls:Card>

                        <controls:Card Grid.Row="1" MinHeight="200" Title="D-Pad" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                            <Grid>

                            </Grid>
                        </controls:Card>
                    </Grid>

                    <controls:Card MinWidth="200" MinHeight="400" Title="Left Stick" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <Grid>

                        </Grid>
                    </controls:Card>

                    <controls:Card MinWidth="200" MinHeight="400" Title="Right Stick" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <Grid>

                        </Grid>
                    </controls:Card>

                    <controls:Card MinWidth="200" MinHeight="400" Title="Triggers" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" TileRadius="6">
                        <Grid>

                        </Grid>
                    </controls:Card>
                </WrapPanel>


            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
