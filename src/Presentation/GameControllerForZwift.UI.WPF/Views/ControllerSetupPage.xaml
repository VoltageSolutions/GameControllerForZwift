<Page x:Class="GameControllerForZwift.UI.WPF.Views.ControllerSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameControllerForZwift.UI.WPF.Views"
      xmlns:helpers="clr-namespace:GameControllerForZwift.UI.WPF.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControllerSetupPage">
    <Page.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock
                Style="{StaticResource TitleTextBlockStyle}"
                Text="{Binding ViewModel.Title}"
                AutomationProperties.HeadingLevel="Level1"/>
            <TextBlock
                x:Name="DescriptionTextBlock"
                Text="{Binding ViewModel.Description}"
                AutomationProperties.HeadingLevel="Level2"
                Visibility="{Binding ViewModel.Description, Converter={StaticResource NullToVisibilityConverter}}"
                />
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="0,0,0,24" Padding="0,0,24,0">
            <StackPanel>
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Margin="0 0 0 12">
                    Accent colors as SystemColors
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
