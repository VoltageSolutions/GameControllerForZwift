                            FontSize="18"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="Controller"
                            Margin="8,8,8,4"/>

                        <Grid Grid.Row="1" MinWidth="300">
                            <Grid.ColumnDefinitions>
